{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "packageRules": [
    {
      "groupName": "Non-major dependency updates",
      "matchUpdateTypes": [
        "minor",
        "patch"
      ],
      "automerge": true
    }
  ],
  "customManagers": [
    {
      "customType": "regex",
      "fileMatch": [],
      "matchStrings": [
        "// renovate: datasource=(?<datasource>[^ ]+) depName=(?<depName>[^\n]+)\n\tstatic String postgresVersion = (?<currentValue>.*);\n"
      ]
    }
  ]
}